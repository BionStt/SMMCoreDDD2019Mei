@model IEnumerable<SumberMas2015.SalesMarketing.Dto.Penjualan.GetLaporanPenjualanPivotSalesResponse>
@{
    ViewData["Title"] = "LaporanPenjualanPivotSales";
    //Layout = "~/Views/Shared/_AdminlteCreate.cshtml";
}
<div class="content-wrapper">
 <section class="content">
     
<h2>Isi Periode Laporan Penjualan Pivot Sales Bulanan</h2>

<form asp-controller="LaporanPivot" asp-action="LaporanPenjualanPivotSales">
     <table style="border:double">
            <tr style="border:double">Masukkan Periode Waktu</tr>
            <tr style="border:double">
                <th style="border:double">Periode Awal:</th>
                <td style="border:double">

                    <input type="text" id="datepicker1" name="PeriodeAwal" />
                </td>
            </tr>
            <tr style="border:double">
                <th style="border:double">Periode Akhir:</th>
                <td style="border:double">

                    <input type="text" id="datepicker2" name="PeriodeAkhir" />
                </td>
            </tr>
            <tr>
                <th>Sales Force</th>
                <td>

                    <select name="NoUrutSales" class="form-control" asp-items="ViewBag.NoUrutSales"></select>
                </td>
            </tr>
            <tr>
                <th></th>
                <td style="border:double">
                    <div class="form-group">
                        <input type="submit" value="Tampilkan" class="btn-info" />
                    </div>
                </td>
            </tr>

        </table>
</form>



<h2>Laporan Penjualan Pivot Sales</h2>


<div class="hidden-print">
    <p></p>
    @*<a style="color:green;text-decoration:none;" href="javascript:window.print()">
            <span style="color:green;text-decoration:none;">
                <img height="12" src="https://ecs7.tokopedia.net/img/print.png" alt="Print" />&nbsp;Cetak
            </span>
            <span style="display:inline-block; width:25px ;"></span>
        </a>*@
    <input name="b_print" type="button" class="ipt" onClick="printdiv('div_print');" value=" Print ">
    <a asp-action="IsiTglLapPJPivotBySales">Back to List</a>
</div>


<div id="div_print">
    <h4>Laporan Penjualan Berdasarkan Sales Force</h4>
    <table style="border:double" width="100%">
        <thead>
            <tr style="border:double">
                <th>Nama Sales Force</th>
                <th>HONDA</th>
                <th>YAMAHA</th>
                <th>SUZUKI</th>
                <th>KAWASAKI</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr style="border:double">
                    <td>@item.NamaSales</td>
                    <td>@item.HONDA</td>
                    <td>@item.YAMAHA</td>
                    <td>@item.SUZUKI</td>
                    <td>@item.KAWASAKI</td>
                    <td>@item.TtlRow</td>
                </tr>

            }


        </tbody>
        <tfoot>
            <tr>
                <td>Total</td>

                <td>@ViewData["HONDA"]</td>
                <td>@ViewData["YAMAHA"]</td>
                <td>@ViewData["SUZUKI"]</td>
                <td>@ViewData["KAWASAKI"]</td>
                <td>@ViewData["TTL"]</td>
            </tr>

        </tfoot>
    </table>

</div>
<div>
    <p>Printed by:@Context.User.Identity.Name @DateTime.Now</p>
</div>

</section>
</div>


<script language="javascript">
    function printdiv(printpage) {
        var headstr = "<html><head><title></title></head><body>";
        var footstr = "</body>";
        var newstr = document.all.item(printpage).innerHTML;
        var oldstr = document.body.innerHTML;
        document.body.innerHTML = headstr + newstr + footstr;
        window.print();
        document.body.innerHTML = oldstr;
        return false;
    }
</script>
<style>
    .page {
        width: 21cm;
        min-height: 29.7cm;
        padding: 2cm;
        margin: 1cm auto;
        border: 1px #D3D3D3 solid;
        border-radius: 5px;
        background: white;
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
    }
</style>
@model SumberMas2015.Inventory.Dto.StokUnit.CreateStokUnitRequest

@{

  //  Layout = "~/Views/Shared/_AdminlteCreate.cshtml";
}


<hr />
<div class="content-wrapper">
    <section class="content">
        <div class="row">
            <div class="col-md-10">
                <div class="row ">
    <div class="col-md-12">
        <form asp-action="InputStokUnit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <table class="table table-bordered table-striped grid text-nowrap table-responsive " style="border:double" width="200">
                <tr hidden>
                    <td>  <label asp-for="pembelianDetailId" class="control-label"></label></td>
                    <td width="75%">
                        <input value="@ViewBag.KodeBeliDetail1" asp-for="pembelianDetailId" class="form-control" />
                        <input name="KodeBeli1" value="@ViewBag.KodeBeli1" />
                        <span asp-validation-for="pembelianDetailId" class="text-danger"></span>
                    </td>
                </tr>
                <tr hidden>
                    <td>  <label asp-for="masterBarangId" class="control-label"></label></td>
                    <td>
                        <input value="@ViewBag.KodeBrg1" asp-for="masterBarangId" class="form-control" />
                        <span asp-validation-for="masterBarangId" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label>Nama Supplier</label>
                    </td>
                    <td>
                        <input readonly asp-for="NamaSupplier" value="@ViewBag.NamaSupplier" class="form-control"/>
                    </td>
                </tr>
                <tr>
                    <td>  <label class="control-label">Nama Barang</label></td>
                    <td width="75%">
                        <input readonly value="@ViewBag.NamaBrg1" class="form-control" />

                    </td>
                </tr>
                <tr>
                    <td>  <label asp-for="Harga" class="control-label"></label></td>
                    <td>
                        <input readonly value="@string.Format("{0:c}", ViewBag.Harga1)" class="form-control" />
                        <input type="hidden" value="@ViewBag.Harga1" asp-for="Harga" class="form-control" />
                        <span asp-validation-for="Harga" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <td>  <label asp-for="Diskon" class="control-label"></label></td>
                    <td>
                        <input type="hidden"  value="@ViewBag.Diskon1" asp-for="Diskon" class="form-control" />
                               <input readonly value="@string.Format("{0:c}", ViewBag.Diskon1)" class="form-control" />
                        <span asp-validation-for="Diskon" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <td>  <label asp-for="Sellin" class="control-label"></label></td>
                    <td>
                        <input type="hidden" value="@ViewBag.SellIn1" asp-for="Sellin" class="form-control" />
                              <input readonly value="@string.Format("{0:c}", ViewBag.SellIn1)" class="form-control" />
                        <span asp-validation-for="Sellin" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <td> <label asp-for="NomorRangka" class="control-label"></label></td>
                    <td>
                        <input asp-for="NomorRangka" class="form-control" />
                        <span asp-validation-for="NomorRangka" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <td>  <label asp-for="NomorMesin" class="control-label"></label></td>
                    <td>
                        <input asp-for="NomorMesin" class="form-control" />
                        <span asp-validation-for="NomorMesin" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <td>  <label asp-for="Warna" class="control-label"></label></td>
                    <td>
                        <input asp-for="Warna" class="form-control" />
                        <span asp-validation-for="Warna" class="text-danger"></span>
                    </td>
                </tr>


            </table>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />

            </div>
        </form>
        <div>
            <a asp-controller="Pembelian" asp-action="GetListPembelianDetail1A">Kembali ke awal</a>
        </div>
    </div>
</div>

<hr />
<hr />
<div>
    <div><h1>Rincian Unit</h1></div>
    <table class="table table-bordered table-striped grid text-nowrap table-responsive " style="border:double">
        <thead>
            <tr>
                <td>Nama Barang - Off The Road - BBN - OTR</td>
                <td>No Rangka</td>
                <td>No Mesin</td>
                <td>Warna</td>
            </tr>
        </thead>
        <tbody>

            @{
                if (ViewBag.StokUnitItems != null)
                {
                    foreach (var item in ViewBag.StokUnitItems)
                    {
                        <tr>
                            <td>@item.NamaBarang1</td>
                            <td>@item.NoRangka1</td>
                            <td>@item.NoMesin1</td>
                            <td>@item.Warna1</td>
                        </tr>
                    }
                }

            }

        </tbody>

    </table>

</div>



            </div>
        </div>
    </section>
</div>

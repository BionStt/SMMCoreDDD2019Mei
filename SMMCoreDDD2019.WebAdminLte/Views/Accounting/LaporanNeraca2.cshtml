@model IEnumerable<SmmCoreDDD2019.Application.AccountingDataJournalDB.Query.GetLaporanNeraca.GetLaporanNeracaLookUpModel>
@{
    ViewData["Title"] = "LaporanNeraca2";
  //  Layout = "~/Views/Shared/_AdminlteCreate.cshtml";
}


<div>
    <h1 style="text-align:center">Laporan Neraca</h1>
    <h2 style="text-align:center">Periode @string.Format("{0:d}", ViewBag.Tgl1) s/d  @string.Format("{0:d}", ViewBag.Tgl2)</h2>

</div>
<div>
    <table class="table table-bordered table-striped grid">
        <thead>
            <tr>
                <th>No.</th>
                <th>Nama Akun</th>
                <th>Debit1</th>
                <th>kredit1</th>
                <th>Saldo1</th>
            </tr>
        </thead>
        <tbody>
            @{Decimal? i = 0;
                Decimal? i2 = 0;
                Decimal? i3 = 0;
            }

            @foreach (var item1 in Model.GroupBy(x => x.KodeAkunInduk))
            {

                <tr class="group-header">
                    <td colspan="6">
                        <span class="h4">@item1.Key</span>
                    </td>
                </tr>
                foreach (var item2 in item1.GroupBy(x => x.KodeAccountParent))
                {

                    <tr class="group-header">
                        <td colspan="6" style="padding-left:23px;font-weight:bold">
                            <span>@item2.Key</span>
                        </td>
                    </tr>
                    foreach (var item3 in item2.GroupBy(x => x.nm))
                    {

                        <tr class="group-header">
                            <td colspan="6" style="padding-left:23px;font-weight:bold">
                                <span>@item3.Key</span>
                            </td>
                        </tr>
                        foreach (var item in item3)
                        {

                            //if (item.Saldo1 != 0) {
                            <tr>
                                <td></td>
                                <td>@Html.DisplayFor(modelItem => item.nm)</td>

                                <td>

                                    @string.Format("{0:c}", item.Debit1)
                                </td>
                                <td>

                                    @string.Format("{0:c}", item.Kredit1)
                                </td>
                                <td>

                                    @string.Format("{0:c}", item.Saldo1)
                                </td>
                            </tr>
                            i = i + item.Saldo1;
                            if (item1.Key == "1 - AKTIVA") { i3 = i; };
                            i2 = i2 + (item.Saldo1 * item.normalPosInduk * -1);
                            //}

                        }



                    }


                }

                <tr class="group-footer">

                    <td colspan="4" style="padding-left:100px;font-weight:bold">
                        <span>@item1.Key</span>

                    </td>


                    @if (item1.Key == "1 - AKTIVA")
                    {
                        <td style="padding-left:100px;font-weight:bold"> @String.Format("{0:c}", i)</td>
                    }
                    else
                    {
                        <td> @String.Format("{0:c}", i)</td>
                    }

                </tr>

                i = 0;
            }

        </tbody>
        <tfoot>
            <tr>
                <td colspan="4" style="padding-left:100px;font-weight:bold">
                    <span>Total Kewajiban Dan Modal</span>
                </td>
                <td style="padding-left:100px;font-weight:bold">
                    <span>@string.Format("{0:c}", i2 + i3)</span>
                </td>
            </tr>
        </tfoot>
    </table>

</div>
<div>
    <table class="table table-bordered table-striped grid">
        <tr>
            <td colspan="3">Dibuat Oleh</td>
            <td colspan="3">Disetujui Oleh</td>
        </tr>
        <tr>
            <td></td>
            <td></td>
        </tr>
    </table>
</div>

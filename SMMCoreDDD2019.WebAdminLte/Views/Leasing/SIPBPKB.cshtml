                <td>
                    @Html.DisplayFor(model => model.AlamatKonsumen)<br />
                    Kel.@Html.DisplayFor(model => model.KelurahanK) Kec.  @Html.DisplayFor(model => model.KecamatanK)<br />
                    Kota @Html.DisplayFor(model => model.KotaK) Kode Pos @Html.DisplayFor(model => model.KodePosK)<br />
                    Telp.@Html.DisplayFor(model => model.NoTelepon) HP.@Html.DisplayFor(model => model.NoHandphone)<br />
                    @*No.KTP. @Html.DisplayFor(model => model.NoKTP)*@
                </td>
            </tr>
            <tr>
                <th>
                    Merek/Nama Barang:
                </th>
                <td>
                    @Html.DisplayFor(model => model.Merek) / @Html.DisplayFor(model => model.NamaBarang)
                </td>
            </tr>
            <tr>
                <th>Warna / Tahun</th>

        <center> <p>@ViewData["TelpP"]</p></center>

    </div>
    <div>
        @ViewData["KotaP"],@DateTime.Now.ToString("dd MMMM yyyy")<br />
        Kepada Yth,
        @Html.DisplayFor(model => model.NamaLeasing)<br />
        Cabang  @Html.DisplayFor(model => model.CabangLeasing)<br />

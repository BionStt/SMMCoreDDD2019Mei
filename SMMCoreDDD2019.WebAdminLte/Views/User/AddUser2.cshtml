@model SmmCoreDDD2019.Common.Identity.ViewModel.Account.UserViewModel

@{
    ViewData["Title"] = "AddUser2";
    //  Layout = "~/Views/Shared/_AdminlteCreate.cshtml";
    Layout = "";
}

<div class="row">
    <div class="col-md-10">
        <form asp-action="AddUser2">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <table class="table table-bordered table-striped grid">

                <tbody>
                    <tr>
                        <th> <label asp-for="Name" class="col-lg-3 col-sm-3 control-label"></label></th>
                        <td>  <input asp-for="Name" class="form-control" /></td>
                    </tr>
                    <tr>
                        <th> <label asp-for="Email" class="col-lg-3 col-sm-3 control-label"></label></th>
                        <td> <input asp-for="Email" class="form-control" /></td>
                    </tr>
                    <tr>
                        <th><label asp-for="PhoneNumber" class="col-lg-3 col-sm-3 control-label"></label></th>
                        <td>  <input asp-for="PhoneNumber" class="form-control" /></td>
                    </tr>
                    <tr>
                        <th> <label asp-for="ApplicationRoleId" class="col-lg-3 col-sm-3 control-label"></label></th>
                        <td>
                            <select asp-for="ApplicationRoleId" asp-items="@Model.ApplicationRoles" class="form-control">
                                <option>Please select</option>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <th> <label asp-for="UserName" class="col-lg-3 col-sm-3 control-label"></label></th>
                        <td> <input asp-for="UserName" class="form-control" /></td>
                    </tr>
                    <tr>
                        <th>  <label asp-for="Password" class="col-lg-3 col-sm-3 control-label"></label></th>
                        <td>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <th> <label asp-for="ConfirmPassword" class="col-lg-3 col-sm-3 control-label"></label></th>
                        <td>
                            <input asp-for="ConfirmPassword" class="form-control" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </td>
                    </tr>

                    <tr><td><input type="submit" value="Create" class="btn btn-default" /></td></tr>
                    <tr></tr>

                </tbody>
            </table>

        </form>
    </div>




</div>






<!DOCTYPE html>
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject SmmCoreDDD2019.Common.Identity.AppIdentityDbContext Context
@{

    ApplicationUser appUser = await UserManager.GetUserAsync(User);
    string controller = (string)ViewContext.RouteData.Values["controller"];

}
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    @*<title>@ViewData["Title"]</title>*@
    <title>Big Sales</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    @Html.Partial("_AdminlteBasicStyles")
    @RenderSection("Styles", required: false)
</head>
<body class="hold-transition skin-blue fixed sidebar-mini">
    <div class="wrapper">
        @Html.Partial("_AdminlteMainHeader", appUser)
        <!-- Left side column. contains the logo and sidebar -->
        @Html.Partial("_AdminlteMainSidebar", appUser)
        <!-- Content Wrapper. Contains page content -->
        <form asp-action="Create">
            <div class="content-wrapper">
                <!-- Content Header (Page header) -->
                @*<section class="content-header">
                    <h1>
                        Create @controller
                    </h1>
                </section>*@
                <!-- Main content -->
                <section class="content">
                    <div class="row">
                        <div class="col-md-10">
                            <!-- Default box -->
                            <div class="box box-primary">
                                <div class="box-body">
                                    @RenderBody()
                                </div>
                                <!-- /.box-body -->
                                @*<div class="box-footer">
                                    <div class="form-group">
                                        <input type="submit" value="Create" class="btn btn-primary" />
                                        <a asp-action="Index" class="btn btn-default">Back to List</a>
                                    </div>
                                </div>*@
                                <!-- /.box-footer-->
                            </div>
                            <!-- /.box -->
                        </div>
                        <div class="col-md-3">
                        </div>
                    </div>

                </section>
                <!-- /.content -->
            </div>
        </form>

        <!-- /.content-wrapper -->
        @Html.Partial("_AdminlteFooter")
    </div>
    <!-- ./wrapper -->
    @Html.Partial("_AdminlteBasicScripts")
    @RenderSection("Scripts", required: false)
</body>
</html>

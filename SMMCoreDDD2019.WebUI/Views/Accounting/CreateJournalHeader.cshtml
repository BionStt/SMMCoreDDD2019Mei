                <label asp-for="Keterangan" class="control-label"></label>
                <input asp-for="Keterangan" class="form-control" />
                <span asp-validation-for="Keterangan" class="text-danger"></span>
            </div>

            <div hidden class="form-group">
                <label asp-for="UserInput" class="control-label"></label>
                <input asp-for="UserInput" class="form-control" />
                <span asp-validation-for="UserInput" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />

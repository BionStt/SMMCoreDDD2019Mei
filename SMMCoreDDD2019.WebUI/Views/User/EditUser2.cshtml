@model SmmCoreDDD2019.Common.Identity.ViewModel.Account.EditUserViewModel

@{
    ViewData["Title"] = "EditUser2";
    // Layout = "~/Views/Shared/_Layout.cshtml";
    Layout = "";
}

<div class="row">
    <div class="col-lg-12">
        <form asp-action="EditUser2" role="form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input hidden asp-for="Id" />
            <div class="form-group">
                <div class="col-md-5">
                    <div class="form-group">
                      
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="form-group">

                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />

                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-5">
                    <div class="form-group">

                        <label asp-for="UserName" class=" control-label"></label>
                        <input asp-for="UserName" class="form-control" />

                    </div>
                </div>
                <div class="col-md-5">
                    <div class="form-group">
                       <label asp-for="PhoneNumber" class=" control-label"></label>
                       <input asp-for="PhoneNumber" class="form-control" />


                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-5">
                    <div class="form-group">
                        <label asp-for="ApplicationRoleId" class=" control-label"></label>
                        @*<select asp-for="ApplicationRoleId" asp-items="@Model.ApplicationRoles" class="form-control">
            <option>Please select</option>
        </select>*@
                        <ul>
                            @{
                                foreach (var item in ViewBag.ItemTest1)
                                {
                                    <li>
                                        <div class="checkbox">
                                            <input disabled type="checkbox" id="Check_@item.CounterId" checked="@item.IsHaveAccess" />
                                            <label for="Check_@item.CounterId">@item.RoleName</label>
                                        </div>

                                    </li>
                                }

                            }
                        </ul>
                    </div>
                </div>
                <div class="col-md-10">
                    <div class="form-group">
                        @*<a asp-action="EditUser2" asp-route-id="@Model.NoUrutMarco">Edit</a>*@
                        <input type="submit" value="Simpan" class="btn btn-default" />

                    </div>
                </div>
            </div>

          
        </form>
    </div>



</div>

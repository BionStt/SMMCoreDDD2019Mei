@model SmmCoreDDD2019.Common.Identity.ViewModel.Manage.IndexViewModel
@using SmmCoreDDD2019.Common.Identity.ViewModel.Manage

@{
    ViewData["Title"] = "Index";
    //   Layout = "~/Views/Shared/_Layout.cshtml";
     ViewData.AddActivePage(ManageNavPages.Index);
}



<h4>@ViewData["Title"]</h4>
@Html.Partial("_StatusMessage", Model.StatusMessage)
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                @if (Model.IsEmailConfirmed)
                {
                    <div class="input-group">
                        <input asp-for="Email" class="form-control" />
                        <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                    </div>
                }
                else
                {
                    <input asp-for="Email" class="form-control" />
                    <button asp-action="SendVerificationEmail" class="btn btn-link">Send verification email</button>
                }
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                @if (Model.IsPhoneNumberConfirmed)
                {
                    <div class="input-group">
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                    </div>
                }
                else
                {
                    <input asp-for="PhoneNumber" class="form-control" />
                    <button asp-action="SendVerificationSMS" class="btn btn-link">Send verification SMS</button>
                }

                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TwoFactor">Two-Factor Authentication</label>
                <p>
                    There are no two-factor authentication providers configured. See <a href="https://go.microsoft.com/fwlink/?LinkID=532713">this article</a>
                    for setting up this application to support two-factor authentication.
                </p>
                @if (Model.TwoFactor)
                {
                    <p>Enabled</p>
                    <button asp-action="DisableTwoFactorAuthentication" class="btn btn-link">Disable</button>

                }
                else
                {
                    <button asp-action="EnableTwoFactorAuthentication" class="btn btn-link">Enable</button>
                    <p>Disabled</p>


                }


            </div>

            <button type="submit" class="btn btn-default">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

